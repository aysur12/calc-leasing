extends ../layouts/default

include ../../components/title/title
include ../../components/inputs/inputs

block variables
  - const title= "Leasing calculator";

block content
  main.page
    .page__title
      +title({
        titleText: "Рассчитайте стоимость автомобиля в лизинг"
      })
    .page__inputs
      +inputs({
        labelText: "Стоимость автомобиля",
        id: "vehicle-price",
        type: "number",
        name: "vehicle-price",
        autofocus: true,
        value: "3300000",
        min: "1500000",
        max: "10000000",
        spanText: "₽",
      })
      +inputs({
        labelText: "Первоначальный взнос",
        id: "down-payment",
        type: "number",
        name: "down-payment",
        value: "420000",
        min: "1500000",
        max: "10000000",
        spanText: "₽",
        withPercent: true,
        percentValue: "13",
      })
      +inputs({
        labelText: "Срок лизинга",
        id: "leasing-term",
        type: "number",
        name: "leasing-term",
        value: "60",
        min: "6",
        max: "120",
        spanText: "мес.",
      })

